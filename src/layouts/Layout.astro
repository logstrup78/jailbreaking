<style>
	:root{
		--color-bg: #fff;
		--color-font: #323232;
	}


	html,
	body {
		background-color: var(--color-bg);
		margin: 0;
		width: 100%;
		height: 100%;
		
	}
	:global(p,ol,a) {
      font-family: "Merriweather Sans", sans-serif;
      font-optical-sizing: auto;
      font-size: 1rem;
      font-weight: 300;
      line-height: 25px;
	  color: var(--color-font)
    }
	:global(a):visited{
		color: #0438A8
	}
	:global(h1){
      font-family: "Pt-sans", sans-serif;
      font-weight: 500;
      font-style: normal;
      font-size: 64px;
      text-align: center;
      margin-block: 4rem;
	  text-transform: uppercase;
	  color: var(--color-font)
    }
	
	

	
</style>
